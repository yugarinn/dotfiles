# PATH VARIABLES
# ------------
export GOPATH=$HOME/work
export EDITOR='vim'
export ANDROID_HOME='/home/sergio/Android/Sdk'
export JAVA_HOME='/usr/lib/jvm/jre-1.8.0'

export PATH="$PATH:$HOME/.config/composer/vendor/bin"
export PATH=~/.local/bin:$PATH

# ALIASES
# ------------
alias vg="vagrant"
alias dk="docker"
alias dc="docker-compose"
alias py="python"
alias nd="node"
alias vi="vim"
alias svi="sudo vim"
alias fucking="sudo"
alias emacs.="emacs . &"
alias artisan="php artisan"
alias histg="history | grep"
alias cdd="cd ~/.dotfiles"
alias backlight="sudo ~/.dotfiles/bin/helpers/backlight.sh"
alias cheat="cht.sh"
alias open="xdg-open"
alias cr="cargo run"
alias ct="cargo test"
alias fb="firebase"
alias dea="docker-compose exec app"
alias domvpn="sudo ip link delete dev wg0 && sudo systemctl start wg-quick@wg0.service"
alias exercism="~/bin/exercism"
alias vim="nvim"

ZSH_THEME="avit"

# FUNCTIONS
# ------------
mcd () {
  mkdir -p $1
  cd $1
}

cdc () {
  cd ~/code/$1/
  pwd
}

cls () {
  cd $1
  ls
}

random () {
  head /dev/urandom | tr -dc A-Za-z0-9 | head -c $1 ; echo ''
}

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
. "$HOME/.cargo/env"

export PATH=$PATH:/usr/local/go/bin

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

# CONFIG
# ------------

# Most pure GTK3 apps use wayland by default, but some,
# like Firefox, need the backend to be explicitely selected.
export MOZ_ENABLE_WAYLAND=1
export MOZ_DBUS_REMOTE=1
export GTK_CSD=0

# qt wayland
export QT_QPA_PLATFORM="wayland"
export QT_QPA_PLATFORMTHEME=qt5ct
export QT_WAYLAND_DISABLE_WINDOWDECORATION="1"

#Java XWayland blank screens fix
export _JAVA_AWT_WM_NONREPARENTING=1
