# PATH VARIABLES
# ------------
export GOPATH=$HOME/work
export EDITOR='vim'
export ANDROID_HOME='/home/sergio/Android/Sdk'
export JAVA_HOME='/usr/lib/jvm/jre-1.8.0'

export PATH="$PATH:$HOME/.config/composer/vendor/bin"
export PATH=~/.local/bin:$PATH

# ALIASES
# ------------
alias vg="vagrant"
alias dk="docker"
alias dc="docker-compose"
alias py="python"
alias nd="node"
alias vi="vim"
alias svi="sudo vim"
alias fucking="sudo"
alias emacs.="emacs . &"
alias artisan="php artisan"
alias histg="history | grep"
alias cdc="cd ~/code"
alias cdd="cd ~/.dotfiles"
alias backlight="sudo ~/.dotfiles/bin/helpers/backlight.sh"
alias cheat="cht.sh"
alias open="xdg-open"
alias cr="cargo run"
alias ct="cargo test"
alias fb="firebase"
alias dea="docker-compose exec app"
alias domvpn="sudo ip link delete dev wg0 && sudo systemctl start wg-quick@wg0.service"

ZSH_THEME="avit"

# FUNCTIONS
# ------------
mcd () {
  mkdir -p $1
  cd $1
}

cdp () {
  cd ~/code/$1/
  pwd
}

cls () {
  cd $1
  ls
}

random () {
  head /dev/urandom | tr -dc A-Za-z0-9 | head -c $1 ; echo ''
}


# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
source "$HOME/.cargo/env"
